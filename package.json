{
  "name": "Mural",
  "version": "0.4.0",
  "description": "Longform Storytelling",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "clean": "rm -rf ./public/dist/index.html && rm ./public/app*",
    "build": "npm run clean && npm run build:client",
    "build:client": "webpack",
    "build:dev": "webpack --config webpack.dev.config.js",
    "webpack:server": "webpack-dev-server --content-base public/ --colors --host 0.0.0.0 --port 8081 --inline",
    "dev": "npm run clean && npm run build:dev"
  },
  "betterScripts": {
    "dev": {
      "command": "npm run webpack:server",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "author": "Pete Haughie, Mark Lewis, Naomi Aro",
  "license": "LGPL",
  "dependencies": {
    "@sindresorhus/slugify": "^1.1.0",
    "archiver": "^2.1.1",
    "better-npm-run": "^0.1.0",
    "blueimp-gallery": "^3.3.0",
    "body-parser": "~1.18.2",
    "bootstrap": "^3.4.1",
    "connect-busboy": "0.0.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "fs-extra": "^7.0.1",
    "hogan-express": "^0.5.2",
    "ismobilejs": "^1.1.1",
    "jquery": "^3.4.0",
    "json-fmt": "^1.1.2",
    "mkdirp": "^0.5.1",
    "morgan": "~1.9.1",
    "rimraf": "^2.6.2",
    "sanitize-filename": "^1.6.3",
    "scrollstory": "^1.1.0",
    "serve-favicon": "~2.4.5",
    "stickybits": "^3.3.1",
    "summernote": "^0.8.10",
    "vex-js": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GetMural/Mural.git"
  },
  "homepage": "https://www.getmural.io",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mural"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "babel-loader": "^8.0.0-beta.2",
    "css-loader": "^0.28.7",
    "expose-loader": "^0.7.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "img-loader": "^2.0.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "svg-loader": "0.0.2",
    "watch": "^1.0.2",
    "webpack": "^3.11.0",
    "webpack-manifest-plugin": "^2.0.3",
    "webpack-md5-hash": "0.0.6",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "11.0.2"
  }
}
