{
  "name": "mural",
  "main": "build/electron/start.js",
  "author": {
    "name": "Mural",
    "email": "support@getmural.io"
  },
  "version": "0.1.7",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@hookform/devtools": "^3.1.0",
    "@material-ui/core": "^4.12.0",
    "@material-ui/icons": "^4.11.2",
    "@reduxjs/toolkit": "^1.5.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/draft-js": "^0.11.4",
    "@types/draftjs-to-html": "^0.8.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.17.5",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-draft-wysiwyg": "^1.13.3",
    "@types/redux-logger": "^3.0.8",
    "@types/sharp": "^0.28.4",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "electron-is-dev": "^2.0.0",
    "false": "^0.0.4",
    "husky": "^7.0.1",
    "is-electron": "^2.2.0",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draft-wysiwyg": "^1.14.7",
    "react-hook-form": "^7.10.1",
    "react-redux": "^7.2.0",
    "react-scripts": "4.0.3",
    "react-sortablejs": "^6.0.0",
    "redux-localstorage-simple": "^2.4.1",
    "redux-logger": "^3.0.6",
    "sharp": "^0.28.3",
    "sortablejs": "^1.14.0",
    "typeface-roboto": "^1.1.13",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && tsc -p electron",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "yarn build && electron-builder"
  },
  "build": {
    "appId": "com.mural",
    "productName": "Mural",
    "copyright": "Copyright Â© 2021 ${author}",
    "linux": {
      "target": [
        "deb"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "extraMetadata": {
      "main": "build/electron/start.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.2.0",
    "electron-reloader": "^1.2.1",
    "wait-on": "^6.0.0"
  }
}
