    "bootstrap": "^3.3.7",
    "connect-busboy": "0.0.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "electron": "^1.8.2",
    "express": "~4.15.5",
    "hogan-express": "^0.5.2",
    "ismobilejs": "^0.4.1",
    "jquery": "^3.2.1",
    "json-fmt": "^1.1.2",
    "mkdirp": "^0.5.1",
    "morgan": "~1.9.0",
    "rimraf": "^2.6.2",
    "scrollstory": "^1.0.0",
    "serve-favicon": "~2.4.5",
